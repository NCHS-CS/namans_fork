{
  "name": "Jekyll + JupyterLite (Universal)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "postCreateCommand": "bundle install && python -m pip install --user -U pip && python -m pip install --user jupyterlite",
  "forwardPorts": [4000],
  "portsAttributes": {
    "4000": { "label": "Site preview", "onAutoForward": "openBrowser" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "rebornix.Ruby",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}